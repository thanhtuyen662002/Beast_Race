<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_3">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="182dp"
        android:layout_height="120dp"
        android:background="@drawable/word_cuoc_dua"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="287dp"
        android:layout_height="91dp"
        android:layout_marginTop="68dp"
        android:background="@drawable/word_bach_thu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Người chơi: "
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="Oscar Number One"
                android:textColor="@color/bg_text"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Số tiền của bạn: "
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="100"
                android:textColor="#BB0000"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/topUp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="+"
                android:background="#0F5132"
                app:Radius="100dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@color/medium_transparent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:gravity="center">

            <CheckBox
                android:id="@+id/cb1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginEnd="10dp"
                android:button="@drawable/custom_checkbox"
                android:layout_height="wrap_content"/>

            <SeekBar
                android:id="@+id/sb1"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:progressBackgroundTint="@color/transparent"
                android:progressTint="@color/transparent"
                android:thumb="@drawable/small_lion"/>

            <EditText
                android:id="@+id/ed1"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:autofillHints="000"
                android:padding="10dp"
                android:layout_marginStart="10dp"
                android:inputType="number"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/bg_edit_text"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:gravity="center">

            <CheckBox
                android:id="@+id/cb2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginEnd="10dp"
                android:button="@drawable/custom_checkbox"
                android:layout_height="wrap_content"/>

            <SeekBar
                android:id="@+id/sb2"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:progressBackgroundTint="@color/transparent"
                android:progressTint="@color/transparent"
                android:thumb="@drawable/small_elephant"/>

            <EditText
                android:id="@+id/ed2"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:autofillHints="000"
                android:padding="10dp"
                android:layout_marginStart="10dp"
                android:inputType="number"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/bg_edit_text"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:gravity="center">

            <CheckBox
                android:id="@+id/cb3"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginEnd="10dp"
                android:button="@drawable/custom_checkbox"
                android:layout_height="wrap_content"/>

            <SeekBar
                android:id="@+id/sb3"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:progressBackgroundTint="@color/transparent"
                android:progressTint="@color/transparent"
                android:thumb="@drawable/small_rhino"/>

            <EditText
                android:id="@+id/ed3"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:autofillHints="000"
                android:padding="10dp"
                android:layout_marginStart="10dp"
                android:inputType="number"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/bg_edit_text"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:gravity="center">

            <CheckBox
                android:id="@+id/cb4"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginEnd="10dp"
                android:button="@drawable/custom_checkbox"
                android:layout_height="wrap_content"/>

            <SeekBar
                android:id="@+id/sb4"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:progressBackgroundTint="@color/transparent"
                android:progressTint="@color/transparent"
                android:thumb="@drawable/small_horse"/>

            <EditText
                android:id="@+id/ed4"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:autofillHints="000"
                android:padding="10dp"
                android:layout_marginStart="10dp"
                android:inputType="number"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/bg_edit_text"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:gravity="center">

            <CheckBox
                android:id="@+id/cb5"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginEnd="10dp"
                android:button="@drawable/custom_checkbox"
                android:layout_height="wrap_content"/>

            <SeekBar
                android:id="@+id/sb5"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:progressBackgroundTint="@color/transparent"
                android:progressTint="@color/transparent"
                android:thumb="@drawable/small_zebra"/>

            <EditText
                android:id="@+id/ed5"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:autofillHints="000"
                android:padding="10dp"
                android:layout_marginStart="10dp"
                android:inputType="number"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/bg_edit_text"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <Button
            android:id="@+id/btn_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="Bắt đầu"
            android:textSize="18sp"
            app:cornerRadius="10dp" />

        <Button
            android:id="@+id/btn_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Làm mới"
            android:textSize="18sp"
            app:cornerRadius="10dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>